<Page x:Class="SW1_ISO9126_FUZZY.Vistas.VistaPreviaSeleccionMetricaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SW1_ISO9126_FUZZY.Vistas"
      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d" 
      
      Title="VistaPreviaSeleccionMetricaPage" Width="800" Height="600">

    <Grid Background="White">
        <TextBlock FontSize="28" HorizontalAlignment="Stretch" Margin="242,10,285,0" TextWrapping="Wrap" Text="Selección de métricas" VerticalAlignment="Top" Height="40" Foreground="#FF149FDA"/>

        <!-- Groupbox de Metricas de calidad Internas-->
        <GroupBox Header="Métricas de Calidad Internas" HorizontalAlignment="Left" Height="238" Margin="10,81,0,0" VerticalAlignment="Top" Width="505" Background="#FF01A221" BorderBrush="#FF01A221">
            <Grid>
                <Button x:Name="btnEstadoFuncInterna" Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="60" Height="60" Click="btnEstadoFuncInterna_Click">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="3"/>
                    </Button.Effect>
                    <Button.Background>
                        <ImageBrush ImageSource="/SW1_ISO9126_FUZZY;component/Imagenes/OData-Edit.png"/>
                    </Button.Background>
                </Button>

                <Button x:Name="btnEstadoUsabInterna" Style="{DynamicResource MetroCircleButtonStyle}" VerticalAlignment="Top" Width="60" Height="60" Margin="10,65,413,0" Click="btnEstadoUsabInterna_Click">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="3"/>
                    </Button.Effect>
                    <Button.Background>
                        <ImageBrush ImageSource="/SW1_ISO9126_FUZZY;component/Imagenes/OTouch.png"/>
                    </Button.Background>
                </Button>

                <Button x:Name="btnEstadoMantInterna" Style="{DynamicResource MetroCircleButtonStyle}" VerticalAlignment="Top" Width="60" Height="60" Margin="10,130,413,0" Click="btnEstadoMantInterna_Click">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="3"/>
                    </Button.Effect>
                    <Button.Background>
                        <ImageBrush ImageSource="/SW1_ISO9126_FUZZY;component/Imagenes/OTools-01.png"/>
                    </Button.Background>
                </Button>

                <DataGrid x:Name="DataGridEstadoMetricasInternas" Margin="121,9,54,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Subcaracterística" CanUserSort="False" CanUserReorder="False"/>
                        <DataGridTextColumn Header="Seleccionadas" CanUserSort="False" CanUserReorder="False" IsReadOnly="True" />
                        <DataGridTextColumn Header="Total" CanUserSort="False" CanUserReorder="False" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>


        <!-- Groupbox de Metricas de calidad Externa-->
        <GroupBox Header="Métricas de Calidad Externa" HorizontalAlignment="Left" Height="250" Margin="10,340,0,0" VerticalAlignment="Top" Width="505" BorderBrush="#FF01A221" Background="#FF01A221">
            <Grid>
                <Button x:Name="btnEstadoFuncExterna" Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="60" Height="60" Click="btnEstadoFuncExterna_Click">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="3"/>
                    </Button.Effect>
                    <Button.Background>
                        <ImageBrush ImageSource="/SW1_ISO9126_FUZZY;component/Imagenes/OBranch-Engineering.png"/>
                    </Button.Background>
                </Button>

                <Button x:Name="btnEstadoUsabExterna" Style="{DynamicResource MetroCircleButtonStyle}" VerticalAlignment="Top" Width="60" Height="60" Margin="10,65,413,0" Click="btnEstadoUsabExterna_Click">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="3"/>
                    </Button.Effect>
                    <Button.Background>
                        <ImageBrush ImageSource="/SW1_ISO9126_FUZZY;component/Imagenes/OHand-Sign-06.png"/>
                    </Button.Background>
                </Button>

                <Button x:Name="btnEstadoMantExterna" Style="{DynamicResource MetroCircleButtonStyle}" VerticalAlignment="Top" Width="60" Height="60" Margin="10,130,413,0" Click="btnEstadoMantExterna_Click">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="3"/>
                    </Button.Effect>
                    <Button.Background>
                        <ImageBrush ImageSource="/SW1_ISO9126_FUZZY;component/Imagenes/OToolbox.png"/>
                    </Button.Background>
                </Button>

                <DataGrid x:Name="DataGridEstadoMetricasExternas" Margin="121,9,54,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Subcaracterística" CanUserSort="False" CanUserReorder="False"/>
                        <DataGridTextColumn Header="Seleccionadas" CanUserSort="False" CanUserReorder="False" IsReadOnly="True" />
                        <DataGridTextColumn Header="Total" CanUserSort="False" CanUserReorder="False" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Groupbox Estado de seleccion de metricas INTERNAS-->
        <GroupBox Header="Estado de selección de las métricas" HorizontalAlignment="Left" Height="238" Margin="538,81,0,0" VerticalAlignment="Top" Width="252" Background="#FF01A221" BorderBrush="#FF01A221">
            <Grid Margin="0,0,0,1">
                <Label x:Name="lblEstadoMetricasFuncInterna" Content="Estado" FontSize="14" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="50" Width="220" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label x:Name="lblEstadoMetricasUsabInterna" Content="Estado" FontSize="14" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Height="60" Width="220" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label x:Name="lblEstadoMetricasMantInterna" Content="Estado" FontSize="14" HorizontalAlignment="Left" Margin="10,138,0,0" VerticalAlignment="Top" Height="50" Width="220" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </Grid>
        </GroupBox>

        <!-- Groupbox Estado de seleccion de metricas eXTERNAS-->
        <GroupBox Header="Estado de selección de las métricas" HorizontalAlignment="Left" Height="250" Margin="538,340,0,0" VerticalAlignment="Top" Width="252" BorderBrush="#FF01A221" Background="#FF01A221">
            <Grid Margin="0,0,0,1">
                <Label x:Name="lblEstadoMetricasFuncExterna" Content="Estado" FontSize="14" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="50" Width="220" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label x:Name="lblEstadoMetricasUsabExterna" Content="Estado" FontSize="14" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top" Height="50" Width="220" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label x:Name="lblEstadoMetricasMantExterna" Content="Estado" FontSize="14" HorizontalAlignment="Left" Margin="10,138,0,0" VerticalAlignment="Top" Height="50" Width="220" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </Grid>
        </GroupBox>


        <!-- Botón para abrir el flyout -->
        <Button x:Name="btnAbrirFlyout" Margin="558,21,28,534" Click="btnAbrirFlyout_Click">
            <StackPanel Orientation="Horizontal" Height="32" Width="242">
                <Image Stretch="Fill" Source="/SW1_ISO9126_FUZZY;component/Imagenes/Open.png" Height="31" Width="35" RenderTransformOrigin="0.571,0.258" Margin="0,0,0,-1" />
                <Label Content="Abrir Selección de métricas" FontSize="12" Height="24" HorizontalContentAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>





    </Grid>
</Page>
